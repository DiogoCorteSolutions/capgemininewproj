@model  Capgemini.Interface.Models.Cadastro
@{
    //ViewBag.Title = "Cadastro de Usuário";

    <style>
        #example_length {
            display: none !important;
        }

        .dataTables_filter {
            display: none !important;
        }

        .erro-alert-nome {
            display: none;
        }

        .erro-alert {
            display: block;
        }

        .dataTables_length {
            display: none;
        }
    </style>
}

@*<h2>@ViewBag.Title</h2>*@

