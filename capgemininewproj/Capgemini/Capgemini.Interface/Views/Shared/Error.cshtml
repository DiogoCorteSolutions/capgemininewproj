@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Oops Error!!!";
}

@if (Biblioteca_PIM.Models.LoginModels.IsLogado())
{
    <h2>@ViewBag.Title</h2>

    <blockquote>
        <p>@ViewBag.Title</p>
        <small>Not<cite title="Source Title">Found</cite></small>
    </blockquote>
}
<div class="alert alert-dismissible alert-danger">
    @*<button type="button" class="close" data-dismiss="alert">×</button>*@
    @Model.Exception.Message
</div>
<hr />
<div style="text-align: center;">
    <a href="@Url.Action("index", "home")" class="btn btn-info">Home</a>
</div>
