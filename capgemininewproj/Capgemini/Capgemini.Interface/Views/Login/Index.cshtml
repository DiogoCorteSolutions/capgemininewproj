@model Capgemini.DTO.CadastroDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
        <h3 class="animated bounceInDown">Informe Seus Dados de Acesso</h3>
        <div class="login-box clearfix animated flipInY">
            <div class="login-logo">
                <a href="#"><img src="@Url.Content("~/Content/login/download.jpg")" alt="Company Logo" class="img-rounded" /></a>
                <a href="#">@*<img src="@Url.Content("~/Content/login/img/livros.jpg")" alt="Company Logo" class="img-rounded" />*@</a>
            </div>
            @*<hr />*@
            <div class="login-form">
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        @*<h4>Error!</h4>*@
                        @TempData["error"]
                    </div>
                }
                <form action="@Url.Action("index", "login")" method="post">
                    @Html.TextBoxFor(x => x.Cpf, new { placeholder = "Informe o CPF", required = "required" })
                    @Html.PasswordFor(x => x.Senha, new { placeholder = "Informe sua Senha", required = "required" })
                    <button type="submit" class="btn btn-login">Login</button>
                </form>
                <div class="login-links">
                    <a href="@Url.Action("recuperarsenha", "login")">
                        Esqueci Senha
                    </a>
                    <a href="@Url.Action("cadastre", "login")">
                        Cadastre-se
                    </a>
                </div>

            </div>
        </div>

        @*<div class="social-login row">
                <div class="fb-login col-lg-6 col-md-12 animated flipInX">
                    <a href="#" class="btn btn-facebook btn-block"><strong>Facebook</strong></a>
                </div>
                <div class="twit-login col-lg-6 col-md-12 animated flipInX">
                    <a href="#" class="btn btn-twitter btn-block"><strong>Twitter</strong></a>
                </div>
            </div>*@
    </div>
</div>
